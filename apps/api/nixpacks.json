{
  "providers": ["..."],
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_24", "pnpm"]
    },
    "install": {
      "cmds": ["pnpm install"]
    },
    "build": {
      "cmds": ["pnpm run build"]
    },
    "deploy": {
      "cmds": ["npx prisma migrate deploy"]
    },
    "start": {
      "cmd": "node dist/main.js"
    }
  }
}
